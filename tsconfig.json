{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "ignoreDeprecations": "5.0"
  }
}
