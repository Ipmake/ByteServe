{
  "compilerOptions": {
    "target": "esnext",
    "module": "node20",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types", "../shared/src"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "dist/**/*"]
}
